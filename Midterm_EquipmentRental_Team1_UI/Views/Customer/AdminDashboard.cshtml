@model EquipmentListViewModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">@ViewData["Title"]</h3>
</div>

<div class="row g-4 align-items-start">
    <!-- Equipment Table -->
    <div class="col-lg-9">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle shadow-sm rounded">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Condition</th>
                        <th>Status</th>
                        <th class="text-center" style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Equipment)
                    {
                        <tr class="table-row" data-href="@Url.Action("Details", "Equipment", new { id = e.Id })">
                            <td>@e.Name</td>
                            <td>@e.Category.ToString()</td>
                            <td>@e.Condition.ToString()</td>
                            <td>
                                @if (e.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Rented</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-controller="Equipment" asp-route-id="@e.Id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <form asp-action="Delete" asp-controller="Equipment" asp-route-id="@e.Id" method="delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Rented Equipment Card -->
    <div class="col-lg-3">
        <a asp-action="" class="text-decoration-none">
            <div class="card bg-warning text-dark shadow-sm border-0 h-100 hover-shadow">
                <div class="card-body d-flex flex-column justify-content-center text-center p-4">
                    <i class="bi bi-box-seam display-5 mb-3"></i>
                    <h4 class="mb-1 fw-bold">@Model.Equipment.Count Rented Equipment</h4>
                    <small class="text-dark-50">View all rentals</small>
                </div>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".table-row").forEach(row => {
                row.addEventListener("click", (e) => {
                    // Prevent redirect if a button or link was clicked
                    if (e.target.closest("a, button, form")) return;
                    console.log("Redirecting to: ", row.dataset.href);
                    window.location = row.dataset.href;
                });
                row.style.cursor = "pointer";
            });
        });
    </script>
}
