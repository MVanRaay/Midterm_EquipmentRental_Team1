@model CustomerListViewModel

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Customer
            </a>
        }
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Role</th>
                <th>Active Rental</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr class="table-row" data-href="@Url.Action("Details", "Customer", new { id = customer.Id })">
                    <td>@customer.Name</td>
                    <td>@customer.Username</td>
                    <td>
                        @if (customer.Role == "Admin")
                        {
                            <span class="badge bg-primary">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">User</span>
                        }
                    </td>
                    <td>
                        @if (customer.HasActiveRental)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-controller="Customer" asp-route-id="@customer.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-controller="Customer" asp-route-id="@customer.Id" method="delete" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".table-row").forEach(row => {
                row.addEventListener("click", (e) => {
                    // Prevent redirect if a button or link was clicked
                    if (e.target.closest("a, button, form")) return;
                    console.log("Redirecting to: ", row.dataset.href);
                    window.location = row.dataset.href;
                });
                row.style.cursor = "pointer";
            });
        });
    </script>
}