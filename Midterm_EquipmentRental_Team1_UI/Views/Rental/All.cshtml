@model RentalListViewModel

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Rentals</h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Rental
            </a>
        }
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Equipment</th>
                <th>Customer</th>
                <th>Issued At</th>
                <th>Due Date</th>
                <th>Returned At</th>
                <th>Status</th>
                @if (User.IsInRole("Admin"))
                {
                    <th class="text-end">Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var rental in Model.Rentals)
            {
                <tr class="table-row" data-href="@Url.Action("Details", "Rental", new { id = rental.Id })">
                    <td>@rental.Equipment?.Name</td>
                    <td>@rental.Customer?.Name</td>
                    <td>@rental.IssuedAt.ToString("yyyy-MM-dd")</td>
                    <td>@rental.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (rental.ReturnedAt != null)
                        {
                            @rental.ReturnedAt?.ToString("yyyy-MM-dd")
                        }
                        else
                        {
                            <span class="text-muted">Not returned</span>
                        }
                    </td>
                    <td>
                        @if (rental.ReturnedAt != null)
                        {
                            <span class="badge bg-success">Returned</span>
                        }
                        else if (rental.IsOverdue)
                        {
                            <span class="badge bg-danger">Overdue</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Ongoing</span>
                        }
                    </td>

                    @if (User.IsInRole("Admin"))
                    {
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-controller="Rental" asp-route-id="@rental.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-controller="Rental" asp-route-id="@rental.Id" method="delete" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this rental?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".table-row").forEach(row => {
                row.addEventListener("click", (e) => {
                    // Prevent redirect if a button or link was clicked
                    if (e.target.closest("a, button, form")) return;
                    console.log("Redirecting to: ", row.dataset.href);
                    window.location = row.dataset.href;
                });
                row.style.cursor = "pointer";
            });
        });
    </script>
}