@model RentalViewModel

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-4">Rental Details</h2>
    </div>
    
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Equipment</dt>
                <dd class="col-sm-9">@Model.Rental?.Equipment?.Name</dd>

                <dt class="col-sm-3">Customer</dt>
                <dd class="col-sm-9">@Model.Rental?.Customer?.Name</dd>

                <dt class="col-sm-3">Issued At</dt>
                <dd class="col-sm-9">@Model.Rental?.IssuedAt.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Due Date</dt>
                <dd class="col-sm-9">@Model.Rental?.DueDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Returned At</dt>
                <dd class="col-sm-9">
                    @if (Model.Rental?.ReturnedAt != null)
                    {
                        @Model.Rental?.ReturnedAt?.ToString("yyyy-MM-dd")
                    }
                    else
                    {
                        <span class="text-muted">Not returned</span>
                    }
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Rental?.ReturnedAt != null)
                    {
                        <span class="badge bg-success">Returned</span>
                    }
                    else if (Model.Rental!.IsOverdue)
                    {
                        <span class="badge bg-danger">Overdue</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Ongoing</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-controller="Rental" asp-route-id="@Model.Rental?.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>

            <form asp-action="Delete" asp-controller="Rental" asp-route-id="@Model.Rental?.Id" method="delete"
                  onsubmit="return confirm('Are you sure you want to delete this rental?');">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
        }

        <a asp-action="GetAll" asp-controller="Rental" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

