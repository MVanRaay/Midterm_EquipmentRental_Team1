@model EquipmentViewModel

<div class="container mt-4">
    <h2 class="mb-4">@Model.Equipment!.Name</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Equipment.Description</dd>

                <dt class="col-sm-3">Rental Price</dt>
                <dd class="col-sm-9">$@Model.Equipment.RentalPrice</dd>

                <dt class="col-sm-3">Availability</dt>
                <dd class="col-sm-9">
                    @if (Model.Equipment.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Not Available</span>
                    }
                </dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Equipment.Category</dd>

                <dt class="col-sm-3">Condition</dt>
                <dd class="col-sm-9">@Model.Equipment.Condition</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.Equipment.CreatedAt?.ToString("yyyy-MM-dd")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="GetAll" asp-controller="Equipment" class="btn btn-secondary">Back to List</a>
    </div>
</div>
