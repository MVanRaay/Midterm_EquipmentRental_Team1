@model EquipmentListViewModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">@ViewData["Title"] List</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> Create New Equipment
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Condition</th>
                <th>Status</th>
                <th class="text-center" style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Equipment)
            {
                <tr class="table-row @(e.IsAvailable ? "" : "table-danger")"
                    data-href="@Url.Action("Details", "Equipment", new { id = e.Id })">
                    <td>@e.Name</td>
                    <td>@e.Category.ToString()</td>
                    <td>@e.Condition.ToString()</td>
                    <td>
                        @if (e.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Not Available</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-controller="Equipment" asp-route-id="@e.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <form asp-action="Delete" asp-controller="Equipment" asp-route-id="@e.Id" method="delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".table-row").forEach(row => {
                row.addEventListener("click", (e) => {
                    // Prevent redirect if a button or link was clicked
                    if (e.target.closest("a, button, form")) return;
                    window.location = row.dataset.href;
                });
                row.style.cursor = "pointer";
            });
        });
    </script>
}
